<!DOCTYPE html>
<html lang="en">
<head>
    <title>Contacts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/97/EC-Logo.svg/2560px-EC-Logo.svg.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
            EncryptChat
          </a>
          
        </div>
        
      </nav>

      <div class="container ">
          <div class="row row-cols-1 row-cols-md-4 g-4">
            <% foundUsers.forEach(user => {    %>
                <div class="col">
                <div class="card bg-light" style="width: 18rem;">
                    <img src="http://simpleicon.com/wp-content/uploads/user1.svg"  width="50" height="250" class="card-img-top d-inline-block align-text-top">
                    <div class="card-body">
                    <h3 class="card-title"><%= user.username %> </h5>
                    <a href="/<%= user._id %>/sendmsg" class="btn btn-dark">Send Message</a>
                    </div>
                </div>
                </div>
            <%  }) %> 
          </div>
        </div>
</body>
</html>

